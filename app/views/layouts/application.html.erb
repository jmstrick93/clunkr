<!DOCTYPE html>
<html>
  <head>
    <title>Clunkr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <div class="navbar">
        <strong><%= link_to "Clunkr.com", root_path%></strong> |
        <%= link_to "Cars", cars_path %> |
        <%= link_to "Brands", brands_path %> |
        <%= link_to "Resources", resources_path %> |
        <%= user_index_button %>
        <%= sign_in_out_button %>
    </div>
    <%= display_flash_messages %>

    <%= yield %>

    <%=javascript_include_tag "order_dependent" %>
  </body>
</html>
