<div class="row align-items-center">
  <div class="col-auto">
    <div class="page-header">
      <h1><%= @car.full_title %></h1><%= link_to "Edit Car", edit_car_path(@car) %> <br> <%= delete_button(@car) %>
    </div>
  </div>
</div>
<div class="row align-items-start">
  <div class='col-xl-6'>
    <div class="card" >
      <%= image_tag(@car.photo_url, class: 'card-img-top')%>
    </div>
    <!-- would be cool to have a "added by" section  -->
  </div>
  <div class='col-xl-6'>
      <!-- <div class="card">
        <div class="card-body"> -->
          <ul class="list-group">
            <li class='list-group-item'>
              <strong>Brand: </strong> <%= link_to @car.brand_name, brand_path(@car.brand) %>
            </li>
            <li class='list-group-item'>
              <h4>Types: </h4>
              <ul>
                <% @car.car_types.each do |t| %>
                  <li><%= t.name%></li>
                <% end %>
              </ul>
            </li>
            <li class='list-group-item'>
             <h4>Resources: </h4>
             <ul>
               <% @car.resources.each do |r| %>
               <!-- had to create custom route for this below; normal car_resource_path only designed to work when used from a car/1/resources kind of route; that one was mixing up the car id and the resource id -->
                 <li><%= link_to r.full_title, "/cars/#{params[:id]}/resources/#{r.id}"  %></li>
               <% end %>
               <br>
                <%= add_resource_button %>
             </ul>
           </li>
           <li class='list-group-item'>
             <h4>Owners: <%= @car.users.uniq.count %></h4>
              <ul>
                <% @car.users.uniq.each do |user| %>
                  <li><%= link_to user.username, user_path(user) %></li>
                <% end %>
              </ul>
            </li>
        </ul>
      <!-- </div>
    </div> -->
  </div>
</div>
